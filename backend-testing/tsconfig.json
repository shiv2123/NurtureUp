{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["../nurtureup/src/*"],
      "@/lib/*": ["../nurtureup/src/lib/*"],
      "@/types/*": ["../nurtureup/src/types/*"]
    }
  },
  "include": [
    "tests/**/*",
    "scripts/**/*",
    "../nurtureup/src/**/*"
  ],
  "exclude": ["node_modules"]
}